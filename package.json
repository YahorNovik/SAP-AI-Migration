{
  "name": "sap-adt-mcp-server",
  "version": "1.0.0",
  "description": "MCP server wrapping abap-adt-api for SAP ADT operations",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "sap-adt-mcp-server": "build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "tsc --watch",
    "frontend:dev": "npm --prefix frontend run dev",
    "frontend:build": "npm --prefix frontend run build",
    "frontend:start": "npm --prefix frontend run start",
    "frontend:db:push": "npm --prefix frontend run db:push",
    "frontend:db:seed": "npm --prefix frontend run db:seed"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "abap-adt-api": "^7.1.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18"
  }
}
